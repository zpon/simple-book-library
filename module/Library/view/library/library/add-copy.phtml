$form = $this->form;
$form->setAttribute('action', $this->url('library', array('action' => 'addCopy', 'id' => $form->get('book_id')->getValue())));
$form->prepare();

echo $this->form()->openTag($form);

echo $this->formHidden($form->get('id'));
echo $this->formHidden($form->get('book_id'));
echo $this->formRow($form->get('additional_id'));
echo $this->formRow($form->get('condition'));
echo $this->formRow($form->get('comment'));
echo $this->formRow($form->get('loan_out_to'));
echo $this->formRow($form->get('lost'));
echo $this->formRow($form->get('location_id'));
echo $this->formSubmit($form->get('submit'));
echo $this->form()->closeTag();
?>