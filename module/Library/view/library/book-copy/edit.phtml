<?php

$title = 'Edit book copy';
$this->headTitle($title);
?>
<h1><?php echo $this->escapeHtml($title); ?></h1>

<?php
$form = $this->form;
$form->setAttribute('action', $this->url(
            'bookcopy',
            array(
                'action' => 'edit',
                'id'     => $this->id,
                )
            ));
$form->prepare();

echo $this->form()->openTag($form);
echo $this->formHidden($form->get('id'));
echo $this->formHidden($form->get('book_id'));
echo $this->formRow($form->get('additional_id'));
echo $this->formRow($form->get('condition'));
echo $this->formRow($form->get('comment'));
echo $this->formRow($form->get('lost'));
echo $this->formRow($form->get('location_id'));
echo $this->formRow($form->get('owner_id'));
echo $this->formSubmit($form->get('submit'));
echo $this->form()->closeTag();
